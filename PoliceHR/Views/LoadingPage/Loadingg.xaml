<Window x:Class="PoliceHR.Views.LoadingPage.Loadingg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:PoliceHR.Views.LoadingPage"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" Height="200" Width="300" >
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <Image gif:ImageBehavior.AnimatedSource="pack://application:,,,/Images/loader.gif" gif:ImageBehavior.RepeatBehavior="20"  Height="200" Width="300" Stretch="Fill" />
    </Grid>
</Window>
